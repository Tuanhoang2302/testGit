.body {
    width: 100%;
    height: 100vh;
}
.header{
    background-color: #5bbbe4;
    width: 100%;
    height: 97px;
    position: absolute;
    top:0px;
    right: 0px;
    left:0px;
}
    .header .logo {
    
        background-size: auto 97px;
        background-position: -340px center;
        background-repeat: no-repeat;
        width: 1024px;
        height: 97px;
        position: relative;
        margin: auto;
    }
.logo:hover{
    cursor: pointer;
}
@font-face {
    font-family: 'Muli-Italic-VariableFont_wght';
    src: url('fonts/Muli-Italic-VariableFont_wght.ttf') format('truetype');
}
@font-face {
    font-family: 'Jellee-Roman2';
    src: url('fonts/Jellee-Roman.otf') format('opentype');
}
@font-face {
    font-family: 'Jellee-Roman';
    src: url('fonts/Jellee-Roman.ttf') format('truetype');
}
.menu {
    background-color: #eee;
    width: 100%;
    height: 50px;
    position: absolute;
    top: 97px;
    right: 0px;
    left: 0px;
    display: flex;
}

    .menu .menu-page {
       
        width: 1024px;
        height: 100%;
        position: relative;
        margin: auto;
        display: flex;
    }
        .menu .menu-page .logo {
           
            width: 150px;
            height: 100%;
            background-image: url('assets/logodragon.png');
            background-repeat: no-repeat;
            background-size: 150px 10px;
            background-position: center;
            margin-left: 20px;
        }
.page {
    display: flex;
}

    .page .choosepage {
        width: 97px;
        height: 100%;
        line-height: 47.1px;
        font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
        font-weight: bold;
        margin-left: 45px;
        color: #717f84;
        letter-spacing:0.6px;
    }

.choosepage:hover {
    color: #e8677c;
    cursor: pointer;
}
.content {
    background-color: #ffffff;
    width: 100%;
    height: calc(100% - 150px);
    position: absolute;
    top: 147px;
    right: 0px;
    left: 0px;
}

    .content .page-content {
        width: 1024px;
        height: 100%;
        position: relative;
        margin: auto;
    }

.page-content .title {
    font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
    font-weight: 900;
    font-size: 20px;
    color: #000000;
    letter-spacing: 0.6px;
    width: 100%;
    position: absolute;
    top:100px;
    text-align: center;
    border: 1px solid #e8677c;
}
.main-content {
    width: 100%;
    height: calc(100% - 125px);
    border: 1px solid #000000;
    position: absolute;
    top: 125px;
    display: flex;
}
.main-content .lesson{
    border: 1px solid #e8677c;
    display: flex;
    height: 100%;
    width: 160px;
    margin: auto;
}
.image-content{
    width: 160px;
    height: 160px;
    border: 4px solid #b0d2a8;
    border-radius: 10px;
    margin-top: 50px;
}
.image-1 {
    background-repeat: no-repeat;
    background-position: center;
    background-image: url('assets/1.png');
}
.image-2 {
    background-repeat: no-repeat;
    background-position: center;
    background-image: url('assets/2.png');
}
.image-3 {
    background-repeat: no-repeat;
    background-position: center;
    background-image: url('assets/3.png');
}
.image-4 {
    background-repeat: no-repeat;
    background-position: center;
    background-image: url('assets/4.png');
}
.button{
    background-color:#b0d2a8;
    border-radius: 50%;
    width: 40px;
    height: 40px;
    position:absolute;
    top: 0px;
    right: 0px;
}


      
